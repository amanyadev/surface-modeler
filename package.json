{
  "name": "half-edge-modeler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @half-edge/web dev",
    "dev:all": "pnpm --filter @amanyadev/half-edge dev & pnpm --filter @half-edge/web dev",
    "dev:kernel": "pnpm --filter @amanyadev/half-edge dev",
    "build": "pnpm -r build",
    "build:kernel": "pnpm --filter @amanyadev/half-edge build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}